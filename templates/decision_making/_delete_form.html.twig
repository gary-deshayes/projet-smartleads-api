<form method="post" action="{{ path('profession_delete', {'id': profession.id}) }}" onsubmit="return confirm('Êtes-vous sûr de bien vouloir supprimer cet élément?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ profession.id) }}">
    <button class="btn">Delete</button>
</form>
