{% extends 'base.html.twig' %}

{% block title %}ObjectTable index{% endblock %}

{% block body %}
    <h1>ObjectTable index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for object_table in object_tables %}
            <tr>
                <td>{{ object_table.id }}</td>
                <td>{{ object_table.libelle }}</td>
                <td>
                    <a href="{{ path('object_table_show', {'id': object_table.id}) }}">show</a>
                    <a href="{{ path('object_table_edit', {'id': object_table.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('object_table_new') }}">Create new</a>
{% endblock %}
